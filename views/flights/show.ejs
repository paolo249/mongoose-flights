<%- include('../partials/header') %>

<br><br><h2>Add Destination</h2>
<form id="add-dest-form" method="POST"
  action="/flights/<%=flight._id%>/destinations">

  <label>Departure Date:
    <input type="datetime-local" name="arrival">
</label><br>
<label>Airport:
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    </label><br>
  <input type="submit"  value="Add Destination">
  <a href="/flights/<%=flight._id%>/tickets/new">New Ticket</a>
</form>

<% if(flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Destination</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(r) { %>
        <tr>
          <td><%= r.arrival.toLocaleString() %></td>
          <td><%= r.airport %></td>
        </tr>
       <% }); %>
      <thead><th>Tickets </th><th>Price ($)</th></thead> 
      <% tickets.forEach(function(t){ %>)

      <tr>
        <td><%= t.seat %></td>
        <td><%= t.price %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>
  

<%- include('../partials/footer') %>
